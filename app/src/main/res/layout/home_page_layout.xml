<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ListView
        android:id="@+id/ll_left_menu_product_category"
        android:layout_width="@dimen/home_page_left_menu_width"
        android:layout_height="match_parent"
        android:background="@color/home_page_left_menu_bg"
        android:cacheColorHint="@android:color/transparent"
        android:fadingEdge="none"
        android:listSelector="#00000000"></ListView>

    <View
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="@color/general_boundary_color" />

    <include
        layout="@layout/menu_list_content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>