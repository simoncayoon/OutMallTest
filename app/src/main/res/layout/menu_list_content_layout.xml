<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- 顶部Banner广告-->
    <FrameLayout
        android:id="@+id/product_list_top_banner_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_list_top_banner_height">
        <android.support.v4.view.ViewPager
            android:id="@+id/svp_scan_image_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/activity_bg"
            />

        <com.shizhefei.view.indicator.FixedIndicatorView
            android:id="@+id/svp_scan_image_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="10dp"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.shizhefei.view.indicator.FixedIndicatorView
            android:id="@+id/home_filter_tab_indicator"
            android:layout_width="match_parent"
            android:layout_height="@dimen/general_tab_height"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/general_boundary_color"/>

        <com.shizhefei.view.viewpager.SViewPager
            android:id="@+id/home_filter_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tabmain_indicator"
            android:background="@color/activity_bg"/>


    </LinearLayout>

</LinearLayout>